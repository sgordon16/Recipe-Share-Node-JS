extends layout
block content
  .container
    .row
      .col-lg-8.col-xl-6.mx-auto
        .card.card-signin.my-5.shadow
          .card-body.mx-5
            form.form-signin(action='/confirmation' method='post')
              h1.text-center Contact Us
              hr
              .form-group
                label(for='name') Name
                input#name.form-control(type='text' placeholder='Enter name' name='name')
              .form-group
                label(for='email') Email
                input#email.form-control(type='text' placeholder='Enter email' name='email') 
              .form-group
                label(for='subject') Subject
                input#subject.form-control(type='text' placeholder='Enter subject' name='subject') 
              .form-group
                label(for='message') Message
                textarea#message.form-control(rows='6' cols='50' placeholder='Your message...' name='message')
              hr
              .clearfix.text-center
                button.btn.btn-custom.mx-2(type='submit' name='submitted' value='Submit') Send
